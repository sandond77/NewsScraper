<script>
	$(document).ready(function(){
		$(".save").click(function(event){
			event.preventDefault();
			var send = {
				id:
				$(this).attr("data-id")
			}
			console.log("id: ", send)
			console.log("saved button clicked")

			$.ajax({
				method: "PUT",
				url: "/save",
				data: send
			}).then(function(data){
				if(data.ok){
					console.log("Saved an article!");
				}
			});
		})
	})
</script>



	


